<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="market.Views.RegistrationPage">
    <StackLayout Padding="20">
        <Label Text="Register" FontSize="Large" />
        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        <Entry Placeholder="Confirm Password" IsPassword="True" Text="{Binding ConfirmPassword}" />
        <Button Text="Register" Command="{Binding RegisterCommand}" />
        <Button Text="Back to Sign In" Command="{Binding NavigateToSignInCommand}" />
    </StackLayout>
</ContentPage>
