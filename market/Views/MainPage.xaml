<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="market.Views.MainPage">

    <StackLayout>

        <!-- Search Bar -->
        <SearchBar Placeholder="Search" 
                   TextChanged="OnSearchBarTextChanged"
                   x:Name="searchBar" />

        <!-- Top ImageButtons -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="10">
            <ImageButton Source="Resources/Images/sellicon.png" Command="{Binding ForSaleCommand}" WidthRequest="50" HeightRequest="50" />
            <ImageButton Source="Resources/Images/jobsicon.png" Command="{Binding JobsCommand}" WidthRequest="50" HeightRequest="50" />
            <ImageButton Source="Resources/Images/servicesicon.png" Command="{Binding ServicesCommand}" WidthRequest="50" HeightRequest="50" />
            <ImageButton Source="Resources/Images/renticon.png" Command="{Binding RentalsCommand}" WidthRequest="50" HeightRequest="50" />
        </StackLayout>

        <!-- Main Content -->
        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Name}" />
                        <!-- Add more item details here -->
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Bottom ImageButtons -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Spacing="10">
            <ImageButton Source="Resources/Images/homeicon.png" Command="{Binding HomeCommand}" WidthRequest="50" HeightRequest="50" />
            <ImageButton Source="Resources/Images/inboxicon.png" Command="{Binding InboxCommand}" WidthRequest="50" HeightRequest="50" />
            <ImageButton Source="Resources/Images/addicon.png" Command="{Binding PostCommand}" WidthRequest="50" HeightRequest="50" />
            <ImageButton Source="Resources/Images/listicon.png" Command="{Binding MyListingsCommand}" WidthRequest="50" HeightRequest="50" />
        </StackLayout>

    </StackLayout>

</ContentPage>
